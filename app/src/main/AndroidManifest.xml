<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobsoft.cryptobet">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".CryptobetApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>>
        <activity
            android:name=".ui.details.CryptoDetailsActivity"
            android:label="@string/title_activity_crypto_details" />
        <activity
            android:name=".ui.about.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".ui.menu.Menu"
            android:label="@string/title_activity_menu"></activity>
    </application>

</manifest>