<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.details.CryptoDetailsActivity"
        tools:layout_editor_absoluteY="81dp"
        tools:showIn="@layout/activity_crypto_details">


        <LinearLayout
            android:id="@+id/linearLayout40"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="32dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank: "
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="35dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="54dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percent change 7d:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="187dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percent change 24h:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="169dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percent change 1h:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="149dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max supply: "
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="130dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total supply:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="111dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24h volume:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="92dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price in BTC:"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="73dp"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="199dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="185dp"
                tools:layout_editor_absoluteY="32dp">

                <TextView
                    android:id="@+id/tvCurrName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="btc"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrRank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rank"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrChange7d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.1"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrChange24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.1"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrChange1h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.1"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrMaxSupply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1100"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrTotalSupply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurr24hVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvCurrPriceInBTC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.1"
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="384dp"
            android:layout_height="4dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="BET"
                    tools:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tvActive"
                    android:translationX="140dp"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Active: no"
                    tools:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Description: You can bet on this cryptocurrency here. You have to specify that when will be reach the given price the currency."
                tools:textColor="@color/colorPrimaryDark" />

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Price: "
                    tools:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="100dp"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="USD"
                    tools:textColor="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Date"
                        android:onClick="showDatePickerDialog" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Time"
                        android:onClick="showTimePickerDialog" />



                </LinearLayout>




            </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                android:text="SAVE"

                />

        </LinearLayout>



    </LinearLayout>
</ScrollView>