<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".ui.details.CryptoDetailsActivity"
            tools:layout_editor_absoluteY="120dp"
            tools:showIn="@layout/activity_crypto_details">


            <LinearLayout
                android:id="@+id/linearLayout40"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="5dp"
                tools:layout_editor_absoluteY="120dp">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="32dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="16dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank: "
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="35dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="54dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percent change 7d:"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="187dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percent change 24h:"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="169dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Percent change 1h:"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="149dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max supply: "
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="130dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total supply:"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="111dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24h volume:"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="92dp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price in BTC:"
                        android:textSize="18sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="73dp"
                        android:textColor="?attr/colorPrimaryDark" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="199dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="185dp"
                    tools:layout_editor_absoluteY="32dp">

                    <TextView
                        android:id="@+id/tvCurrName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="btc"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rank"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrChange7d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.1"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrChange24h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.1"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrChange1h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.1"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrMaxSupply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1100"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrTotalSupply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurr24hVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvCurrPriceInBTC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.1"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimaryDark" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="384dp"
                android:layout_height="4dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BET"
                        android:textSize="18sp"
                        tools:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tvActive"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:text="Active: no"
                        android:textSize="18sp"
                        android:translationX="140dp"
                        tools:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: You can bet on this cryptocurrency here. You have to specify that when will be reach the given price the currency."
                    android:textSize="18sp"
                    tools:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textSize="18sp"
                        tools:textColor="@color/colorPrimaryDark" />

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:digits="0123456789."
                        android:inputType="numberDecimal"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:text="USD"
                        android:textSize="18sp"
                        tools:textColor="@color/colorPrimaryDark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: "
                        android:textSize="18sp"
                        tools:textColor="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/showDatePickerDialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="showDatePickerDialog"
                            android:text="Set Date" />

                        <Button
                            android:id="@+id/showTimePickerDialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="showTimePickerDialog"
                            android:text="Set Time" />

                        <TextView
                            android:id="@+id/textViewShowDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="" />


                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="SAVE"

                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>